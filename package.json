{
  "name": "ovus",
  "version": "0.0.2",
  "description": "HTML template engine designed for creating components",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "prettier": "npx prettier . --write",
    "prettier-check": "npx prettier . --check",
    "prettier-eslint-conflicts": "npx eslint-config-prettier ./index.js",
    "eslint-check": "npx eslint ./lib && npx eslint index.js",
    "eslint-fix": "npx eslint ./lib --fix && npx eslint index.js --fix",
    "check-all": "npm run eslint-check && npm run prettier-check",
    "clean": "npm run eslint-fix && npm run prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prunus-dev/ovus.git"
  },
  "keywords": [
    "html",
    "template",
    "component",
    "alpine"
  ],
  "author": "prunus-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prunus-dev/ovus/issues"
  },
  "homepage": "https://github.com/prunus-dev/ovus#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "prettier": "3.4.2"
  }
}
